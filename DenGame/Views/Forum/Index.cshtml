@model IEnumerable<DenGame.Models.ArticleList>
@{
	ViewData["Title"] = "Index";
}
<head>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link rel="stylesheet" href="~/css/forumIndex.css" asp-append-version="true" />
<script src="https://kit.fontawesome.com/b5dde33e16.js" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
	  integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<style>
	body{
		/* background-color: rgba(0, 0, 0, 0.1);
		background-blend-mode: multiply;
		background-image: url();
		background-size: cover; */
		background: linear-gradient(rgba(0, 0, 0, 0.1), rgba(0, 0, 0, 0.1)), url('../img/purple.png') no-repeat 0% 20%/ cover;
	}
	
</style>
<body>
	<div class="m-1">
		<div class="d-flex">
			<div class="m-1 w-100   rounded">
				<div class="p-1">
					<div class="d-flex justify-content-around w-25 m-auto" >
						<div>
							<a href="" class="btn btn-outline-secondary"><i class="fa-solid fa-caret-left"></i></a>
						</div>
						<div>
							<p class="page">
								<a href="" class="btn btn-outline-secondary">1</a>
								<a href="" class="btn btn-outline-secondary">2</a>
								<a href="" class="btn btn-outline-secondary">3</a>
							</p>
						</div>
						<div>
							<a href="" class="btn btn-outline-secondary"><i class="fa-solid fa-caret-right"></i></a>
						</div>
					</div>
					<a href="" class="btn btn-outline-secondary">New</a>
					<a href="" class="btn btn-outline-secondary">Hot</a>
				</div>

				<table class="table table-striped table-Info table-hover shadow bg-light bg-gradient">
					<thead>
						<tr class="text-white purple-cl">
							<th scope="col">#</th>
							<th scope="col">文章列表</th>
							<th scope="col"><div class="d-flex justify-content-center"><i class="bi bi-eye"></i></div></th>
							<th scope="col"><div class="d-flex justify-content-center"><i class="bi bi-chat-left"></i></div></th>
							<th scope="col"><div class="d-flex justify-content-center"><i class="bi bi-calendar"></i></div></th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<th scope="col" class="align-middle">
									<div class="d-flex justify-content-center text-muted">1</div>
								</th>
								<td class="title align-middle">
									<a href="/Forum/Artical" class="d-flex text-decoration-none">
										<div>
											<img src="https://upload-os-bbs.hoyolab.com/upload/2024/04/30/6729e8f3a5c9291c41a558149aedf71b_927294122593169208.jpg"
											alt="" style="width: 150px; object-fit: cover;">
										</div>

										<div class="imglist-text">
											<div class="b-list_title fw-bold ">@item.ArticalTitle</div>
											<div class="b-list_brief text-secondary">
												@Html.Raw(item.ArticalContent)
											</div>
										</div>
									</a>
								</td>
								<td class="align-middle " style=" font-size:x-small">
									<div class="d-flex justify-content-center text-muted"><div><i class="fa-solid fa-eye me-1"></i><span>1000</span></div></div>
								</td>
								<td class="align-middle" style="font-size:x-small">
									<div class="d-flex justify-content-center text-muted"><div><i class="fa-solid fa-message me-1"></i><span>500</span></div></div>
								</td>
								<td class="align-middle" style=" font-size:x-small">
									<div class="d-flex justify-content-center text-muted"> <div>3days</div> </div>
								</td>
							</tr>
						}

					</tbody>
				</table>
			</div>
			<div class="m-1 p-1" >
				<div class="p-3 rounded">
					<div class="input-group">
						<input type="search" class="w-75 form-control" placeholder="搜尋文章">
						<button class="btn btn-light"><i class="fa-solid fa-magnifying-glass"></i></button>
					</div>

				</div>
				<div class="mt-1  p-3 rounded ">
					<div class="list-group">
						<a href="/Forum/Post" class="btn btn-light">快來發文吧!</a>
					</div>

				</div>
				<div class="mt-1  p-3 rounded ">
					<div class="list-group">
						<a href="/Forum/ForumUser" class="btn btn-light">個人主頁</a>
					</div>

				</div>


			
			</div>
		</div>
	</div>

	<script>
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js" ></script>
	<script>
		$(document).ready(function () {
			$("oembed").each(function () {
				var url = $(this).attr("url");
				if (url.includes("youtube.com")) {
					var videoId = url.split("v=")[1];
					var embedUrl = "https://www.youtube.com/embed/" + videoId;
					$(this).replaceWith('<iframe width="560" height="315" src="' + embedUrl + '" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>');
				}
			});
		});
	</script>
</body>
